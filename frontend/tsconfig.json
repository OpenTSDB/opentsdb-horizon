{
    "compileOnSave": false,
    "compilerOptions": {
      "downlevelIteration": true,
      "module": "es2020",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "target": "ES2022",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2017",
        "es2018.regexp",
        "dom"
      ],
      "useDefineForClassFields": false
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": false,
        "strictTemplates": false
    },
    "exclude": [
        "./src/**/*.scss"
    ]
}
